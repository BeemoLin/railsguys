<% if user_signed_in? %>
<p>hello <%= current_user.email %></p>

<div><%= link_to "New Post", new_post_path, class:'btn btn-primary' %></div>
<% end %>
<table class="table">
  <thead>
    <tr>
      <td>Title</td>
      <td>Author</td>
      <td>Update Time</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.owner.email %></td>
        <td><%= post.updated_at %></td>
        <td>
          <% if can? :update, post %>
            <%= link_to "Edit", edit_post_path(post), :class => "btn btn-default" %>
          <% end %>
          <% if can? :destroy, post %>
            <%= link_to "Delete", post_path(post), :class => "btn btn-default", :method => :delete, :onclick => "return confirm('Are you sure?')" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
