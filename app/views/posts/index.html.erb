<% if user_signed_in? %>
<p>hello <%= current_user.username %></p>

<div><%= link_to "New Post", new_post_path%></div>
<% end %>
<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Content</td>
      <td>Update Time</td>
      <td>Author</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.updated_at %></td>
        <td><%= post.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
