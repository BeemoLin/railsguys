<div>
  <%= form_for @post, :html => { :multipart => true } do |f| %>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
  
    <div>
      <%= f.label :content %>
      <%= f.text_area :content, :class => 'form-control', :rows => '3' %>
    </div>

    <div>
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>
    
    </br>
    <%= f.submit :class => "btn btn-default" %>
    <%= link_to "back",  posts_path, :class => "btn btn-default" %>
  <% end %>
</div>
